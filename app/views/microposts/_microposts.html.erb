<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted"><%= micropost.created_at %></span>
        </div>
        <div>
          <P class="mb-0"><%= micropost.content %></P>
        </div>
        <div class="row">
          <div class="col-md-3 col-lg-2">
            <%= render 'favorites/favorite_button', fav_micropost: micropost %>
          </div>
          <% if current_user == micropost.user %>
            <div class="col-md-3 col-lg-2">
              <%= link_to 'Delete', micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm inline-block' %>
            </div>
          <% end %> 
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>